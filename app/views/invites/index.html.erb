<p id="notice"><%= notice %></p>
<%= link_to 'All Send Methods ', emails_path %>

<h1>Listing Invites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Document</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.name %></td>
        <td><%= invite.document %></td>
        <td><%= link_to 'Select Users To Invite', {controller: 'welcome',action: 'select',id: invite.id} %></td>

        <td><%= link_to 'Show', invite %></td>

        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>
